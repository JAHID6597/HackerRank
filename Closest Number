#include<bits/stdc++.h>
using namespace std;

int main()
{
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    cout.tie(NULL);

    long long t;
    cin>>t;
    while(t--){
        int a, b, x, m, ans;
        cin>>a>>b>>x;

        m = pow(a,b)+x/2;
        ans = m - (m%x);

        cout<<ans<<endl;
    }
    return 0;
}
