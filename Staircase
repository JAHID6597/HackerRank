#include<bits/stdc++.h>
using namespace std;

//#define debug

int main()
{

#ifdef debug
    freopen("C:/Users/jahid/Desktop/New Text Document.txt","r",stdin);
#endif

    int n,i,j,k;
    cin>>n;
    for(i=0; i<n; i++)
    {
        for(j=i; j<n-1; j++)
        {
            cout<<" ";
        }
        for(k=0; k<=i; k++)
        {
            cout<<"#";
        }
        cout<<endl;
    }
    return 0;
}
