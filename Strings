#include <iostream>
#include <string>
using namespace std;

int main() {
	string a,b;
    cin>>a>>b;
    int len1,len2;
    len1 = a.length();
    len2 = b.length();
    cout<<len1<<" "<<len2<<endl;
    cout<<a+b<<endl;
    char c;
    c = a[0];
    a[0] = b[0];
    b[0] = c;
    cout<<a<<" "<<b<<endl;
    return 0;
}
